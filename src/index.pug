    link(rel="stylesheet", href="main.css")
    script(src="lib/jquery/dist/jquery.js")
    script.
      window.jQuery = window.$ = require('./lib/jquery/dist/jquery.js');
    script(src="lib/metro/build/js/metro.js")
    script(src="lib/zeroclipboard/dist/Zeroclipboard.js")
